{
    "compilerOptions": {
        "target": "es6",
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "rootDir": "./"
    },

    "filesGlob": [
        "**/*.ts",
        "**/*.tsx"
    ],

    "rootDirs": [
        "./"
    ],

    "paths": {
        "*": ["*"]
    },
    "exclude": ["test"],
    "files": [
        "./core/FabaEvent.ts",
        "./typings/tsd.d.ts",
        "./runtimes/FabaServer.ts",
        "./runtimes/FabaWebApplication.ts",
        "./core/FabaService.ts",
        "./core/FabaValueObject.ts",
        "./core/FabaCommand.ts",
        "./core/FabaCore.ts",
        "./core/FabaModel.ts",
        "./transport/FabaApiConnection.ts",
        "./nodejs/mongodb/FabaMongoCollection.ts",
        "./nodejs/mongodb/FabaMongoConnection.ts",
        "./decorators/FabaBindable.ts",
        "./core/FabaEventManager.ts"
    ]
}
